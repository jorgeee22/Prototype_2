<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>

    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
   
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
   
    <link href="/css/styleHome.css" rel="stylesheet">
</head>
<body>

    <%- include("partials/nav_bar"); -%>

    <!-- Header Section -->
    <header class="header d-flex flex-column justify-content-center align-items-center text-center">
        <div class="container">
            <h1 class="display-4 text-white font-weight-bold">Homes. Future. Sustainability.</h1>
            <div class="input-group mt-4">
                <form action="/search" method="get" class="d-flex w-100">
                    <input type="text" name="address" class="form-control" placeholder="Enter a city or ZIP code (Zapopan, 43243)" aria-label="Search Address" aria-describedby="search-button" required>
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-secondary" id="search-button">
                            <i class="fa fa-search" aria-hidden="true"></i>
                        </button>                              
                    </div>
                </form>
                
            </div>
        </div>
    </header>

    
    

    <!-- Services Section -->
    <section class="services-section my-5">
        <div class="container">
            <div class="row">

                <!-- Buy House Service -->
                <div class="col-md-4">
                    <div class="card mb-4">
                        <img src="/pics/Leslie_Living-Room-Hero.jpg.webp" class="card-img-top" alt="Buy House Image">
                        <div class="card-body">
                            <h5 class="card-title">Buy House</h5>
                            <p class="card-text">We can help find the house of your dreams.</p>
                            <a href="/catalog" class="btn btn-primary">See homes</a>
                        </div>
                    </div>
                </div>

                <!-- Sell House Service -->
                <div class="col-md-4">
                    <div class="card mb-4">
                        <img src="/pics/MED-Park-2.jpg.webp" class="card-img-top" alt="Sell House Image">
                        <div class="card-body">
                            <h5 class="card-title">Sell House</h5>
                            <p class="card-text">We can help you navigate to a successful sale.</p>
                            <a href="/sell" class="btn btn-primary">See your options</a>
                        </div>
                    </div>
                </div>

                <!-- Rent a House Service -->
                <div class="col-md-4">
                    <div class="card mb-4">
                        <img src="/pics/Tomei_Bleeker_1.jpg.webp" class="card-img-top" alt="Rent a House Image">
                        <div class="card-body">
                            <h5 class="card-title">Rent a House</h5>
                            <p class="card-text">Find the perfect home to rent at the best price.</p>
                            <a href="/catalog" class="btn btn-primary">Find rentals here</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>

    <!-- Carousel Section -->
    <section class="carousel-section my-5">
        <div class="container">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>

                <!-- Carousel Items -->
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="/pics/0ca922a93bb9c23455377abf6584c416-cc_ft_1536.webp" alt="First slide">
                        <div class="carousel-caption d-none d-md-block">
                            
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="/pics/20dfcc988441a7e3cacf79856e29ecba-cc_ft_1536.webp" alt="Second slide">
                        <div class="carousel-caption d-none d-md-block">
                            
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="/pics/fe47ba1a96203b523a04bba21fa88809-cc_ft_1536.webp" alt="Third slide">
                        <div class="carousel-caption d-none d-md-block">
                            
                        </div>
                    </div>
                </div>

                <!-- Controls -->
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon bg-dark rounded-circle p-3" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon bg-dark rounded-circle p-3" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </section>

    <%- include("partials/footer"); -%>
